<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="44dp"
        android:layout_marginTop="40dp"
        android:id="@+id/txtViewMoneyLoanFirstName" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtViewMoneyLoanFirstName"
        android:layout_toEndOf="@+id/txtViewMoneyLoanFirstName"
        android:layout_marginStart="33dp"
        android:id="@+id/txtViewMoneyLoanLastName" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewMoneyLoanFirstName"
        android:layout_alignStart="@+id/txtViewMoneyLoanFirstName"
        android:layout_marginTop="13dp"
        android:id="@+id/txtViewMoneyLoanAmount" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewMoneyLoanAmount"
        android:layout_alignStart="@+id/txtViewMoneyLoanAmount"
        android:layout_marginTop="21dp"
        android:id="@+id/txtViewMoneyLoanDate" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_view"
        android:layout_alignTop="@+id/txtViewMoneyLoanAmount"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="46dp"
        android:id="@+id/imgViewMoneyLoanDetail" />
</RelativeLayout>