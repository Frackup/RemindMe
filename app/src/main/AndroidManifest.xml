<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.avescera.remindme">

    <uses-sdk
        android:minSdkVersion="22"
        android:targetSdkVersion="25" />

    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="25" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="25" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".WelcomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MoneyListActivity"
            android:label="@string/title_activity_money_loan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ObjectListActivity"
            android:label="@string/title_activity_object_loan"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MoneyCreationActivity"
            android:label="@string/title_activity_money_creation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ObjectCreationActivity"
            android:label="@string/title_activity_object_creation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContactCreationActivity"
            android:label="@string/title_activity_contact_creation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContactListActivity"
            android:label="@string/title_activity_contact_list"
            android:parentActivityName=".HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.avescera.remindme.HomePageActivity" />
        </activity>
        <activity
            android:name=".CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CategoryCreationActivity"
            android:label="@string/title_activity_category_creation"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ContactExchangeActivity"
            android:label="@string/title_activity_contact_exchange"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".StatisticsActivity"
            android:label="@string/title_activity_statistics_new"
            android:parentActivityName=".HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.avescera.remindme.HomePageActivity" />
        </activity>
        <activity
            android:name=".CategoryListActivity"
            android:label="@string/title_activity_category_list"
            android:parentActivityName=".HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.avescera.remindme.HomePageActivity" />
        </activity>
        <activity
            android:name=".RemindersActivity"
            android:label="@string/title_activity_reminders"
            android:parentActivityName=".HomePageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.avescera.remindme.HomePageActivity" />
        </activity>
    </application>

</manifest>