<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtViewContactFirstName"
        android:layout_toEndOf="@+id/txtViewContactFirstName"
        android:layout_marginStart="39dp"
        android:id="@+id/txtViewContactLastName" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewContactFirstName"
        android:layout_alignStart="@+id/txtViewContactFirstName"
        android:layout_marginTop="14dp"
        android:id="@+id/txtViewContactPhone" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtViewContactPhone"
        android:layout_alignStart="@+id/txtViewContactPhone"
        android:layout_marginTop="19dp"
        android:id="@+id/txtViewContactEmail" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewContactFirstName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/contact_delete"
        android:id="@+id/imgViewContactDelete"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/contact_edit"
        android:id="@+id/imgViewContactEdit"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="55dp" />
</RelativeLayout>