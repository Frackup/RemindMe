<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_money_exchange_creation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.avescera.remindme.MoneyCreationActivity"
    tools:showIn="@layout/activity_money_creation"
    android:theme="@style/Theme.App.Base.MoneyCreation">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editTxtMoneyCreationTitle"
        android:hint="@string/hint_edittxt_crea_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColorLink="@color/colorMoney" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerMoneyCreationContact"
        android:layout_below="@+id/editTxtMoneyCreationAmount"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_marginTop="34dp"
        android:id="@+id/editTxtMoneyCreationDate"
        android:hint="@string/hint_edittxt_crea_date"
        android:layout_below="@+id/editTxtMoneyCreationAmount"
        android:layout_alignParentStart="true"
        android:textColorLink="@color/colorMoney" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:layout_below="@+id/editTxtMoneyCreationDate"
        android:layout_centerHorizontal="true"
        android:id="@+id/editTxtMoneyCreationDetails"
        android:hint="@string/hint_edittxt_crea_details"
        android:textColorLink="@color/colorMoney" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/editTxtMoneyCreationAmount"
        android:hint="@string/hint_edittxt_crea_amount"
        android:layout_below="@+id/spinnerMoneyCreationType"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:textColorLink="@color/colorMoney" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerMoneyCreationType"
        android:layout_below="@+id/editTxtMoneyCreationTitle"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_below="@+id/editTxtMoneyCreationDetails"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/editTxtMoneyCreationEndDate"
        android:hint="@string/hint_edittxt_crea_end_date"
        android:textColorLink="@color/colorMoney" />

    <CheckBox
        android:text="CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editTxtMoneyCreationEndDate"
        android:layout_toEndOf="@+id/editTxtMoneyCreationEndDate"
        android:id="@+id/chkboxImportantMoney"
        android:textColorLink="@color/colorMoney" />
</RelativeLayout>
