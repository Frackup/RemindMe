<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorHomePage</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.AppBarOverlayHome" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/colorHomePage</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/colorHomePage</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Menu color style -->
    <style name="AppTheme.AppBarOverlayMoney" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorMoney</item>
    </style>
    <style name="AppTheme.AppBarOverlayObject" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorObject</item>
    </style>
    <style name="AppTheme.AppBarOverlayContact" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorContact</item>
    </style>
    <style name="AppTheme.AppBarOverlayCategory" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorCategory</item>
    </style>
    <style name="AppTheme.AppBarOverlayStatistics" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorStatistics</item>
    </style>
    <style name="AppTheme.AppBarOverlaySettings" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/colorReminders</item>
    </style>

    <!-- Texts color appearance -->
    <style name="Theme.App.Base.MoneyCreation" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">@color/colorMoney</item>
        <item name="colorControlHighlight">@color/colorMoney</item>
    </style>
    <style name="Theme.App.Base.ObjectCreation" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">@color/colorObject</item>
        <item name="colorControlHighlight">@color/colorObject</item>
    </style>
    <style name="Theme.App.Base.ContactCreation" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">@color/colorContact</item>
        <item name="colorControlHighlight">@color/colorContact</item>
    </style>
    <style name="Theme.App.Base.CategoryCreation" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">@color/colorCategory</item>
        <item name="colorControlHighlight">@color/colorCategory</item>
    </style>
    <style name="Theme.App.Base.ReminderCreation" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#000000</item>
        <item name="colorControlActivated">@color/colorReminders</item>
        <item name="colorControlHighlight">@color/colorReminders</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
